<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="purdue4992015.independentstudy.Activity2"
    android:id="@+id/y">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STAND UP!"
        android:id="@+id/txtStandUp"
        android:textSize="60dp"
        android:textAlignment="gravity"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Suggested Task:"
        android:id="@+id/txtTask"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txtStandUp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Task"
        android:id="@+id/btnOtherTask"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/txtTooBusy"
        android:layout_alignLeft="@+id/txtStandUp"
        android:layout_alignStart="@+id/txtStandUp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Too busy? Click here to snooze"
        android:id="@+id/txtTooBusy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Task"
        android:id="@+id/btnNoTask"
        android:layout_alignTop="@+id/btnOtherTask"
        android:layout_toRightOf="@+id/txtTask"
        android:layout_toEndOf="@+id/txtTask" />

</RelativeLayout>
